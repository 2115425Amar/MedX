<body class="flex">
    <div>
        <%= render 'devise/shared/navbar' %>
    </div>

    <!-- Main Content -->
    <div class="w-full min-h-screen flex items-center justify-center p-4 bg-gray-100 mt-[15%] md:mt-[0%]">
        <div class="w3-container">
            <div class="bg-gray-200 rounded-xl p-8 mx-2">
                <div class="container mx-auto flex justify-center items-center">
                    <div class="p-4 md:p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

                            <!-- All Users Report -->
                            <div class="bg-white shadow-md rounded-lg p-4 text-center">
                                <!-- Icon -->
                                <div class="w-16 h-16 mb-4 rounded-full bg-blue-500 flex items-center justify-center text-white mx-auto">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                        <polyline points="14 2 14 8 20 8"></polyline>
                                        <line x1="16" y1="13" x2="8" y2="13"></line>
                                        <line x1="16" y1="17" x2="8" y2="17"></line>
                                        <polyline points="10 9 9 9 8 9"></polyline>
                                    </svg>
                                </div>
                                <h2 class="text-lg font-semibold">All Users</h2>
                                <p class="text-sm text-gray-600">Posts, comments, and likes count</p>
                                <div class="mt-4 flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2 justify-center">
                                    <label>
                                        <input type="radio" name="format1" value="xlsx"> Excel
                                    </label>
                                    <label>
                                        <input type="radio" name="format1" value="csv" checked> .CSV
                                    </label>
                                </div>
                                <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded w-full md:w-auto" onclick="downloadReport('all_users', 'format1')">Download</button>
                            </div>

                            <!-- Active Users Report -->
                            <div class="bg-white shadow-md rounded-lg p-4 text-center">
                                <!-- Icon -->
                                <div class="w-16 h-16 mb-4 rounded-full bg-blue-500 flex items-center justify-center text-white mx-auto">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                        <polyline points="14 2 14 8 20 8"></polyline>
                                        <line x1="16" y1="13" x2="8" y2="13"></line>
                                        <line x1="16" y1="17" x2="8" y2="17"></line>
                                        <polyline points="10 9 9 9 8 9"></polyline>
                                    </svg>
                                </div>
                                <h2 class="text-lg font-semibold">Active Users</h2>
                                <p class="text-sm text-gray-600">Having more than 10 posts</p>
                                <div class="mt-4 flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2 justify-center">
                                    <label>
                                        <input type="radio" name="format2" value="xlsx"> Excel
                                    </label>
                                    <label>
                                        <input type="radio" name="format2" value="csv" checked> .CSV
                                    </label>
                                </div>
                                <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded w-full md:w-auto" onclick="downloadReport('active_users', 'format2')">Download</button>
                            </div>

                           

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function downloadReport(reportType, formatGroup) {
            // Finds the selected format (CSV or Excel).
            let format = document.querySelector(`input[name="${formatGroup}"]:checked`);

            if (!format) {
                // alert("Please select a format.");
                return;
            }
            // Redirects to the download_report endpoint with the selected parameters.
            window.location.href = `/reports/download_report?report_type=${reportType}&format=${format.value}`;
        }
    </script>
</body>
