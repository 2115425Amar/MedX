<!-- app/views/shared/_flash.html.erb -->
<% if notice %>
  <div class="flash notice bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
    <%= notice %>
  </div>
<% elsif alert %>
  <div class="flash alert bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <%= alert %>
  </div>
<% end %>