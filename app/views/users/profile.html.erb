<div>
  <%= render 'devise/shared/navbar' %>
</div>
    
<div class="w-full min-h-screen flex items-center justify-center p-4 bg-gray-100 mt-[15%] md:mt-[2%]">
  <div class="w-full max-w-lg md:max-w-xl lg:max-w-2xl bg-white shadow-md rounded-xl p-6 md:p-8">

    <%= form_for(@user, url: update_profile_path, method: :patch, html: { multipart: true }) do |f| %>

      <!-- Avatar Upload -->
      <div class="flex flex-col items-center">
        <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-cover bg-center relative"
          style="background-image: url('<%= @user.avatar_public_id.present? ? Cloudinary::Utils.cloudinary_url(@user.avatar_public_id, width: 150, height: 150, crop: :fill) : asset_path('imageavatar.jpg') %>');">
          <div class="absolute inset-0 bg-black bg-opacity-30 rounded-full"></div>
        </div>
        <div class="mt-3 ml-4">
          <%= f.file_field :avatar, class: "w-full text-sm" %>
        </div>
      </div>

      <!-- Profile Header -->
      <div class=" mt-4">
        <h2 class="text-xl md:text-2xl font-semibold">Profile</h2>
        <p class="text-sm text-gray-500">Update your profile information.</p>
      </div>

      <!-- Profile Form -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
        <div>
          <%= f.label :first_name, "First Name", class: "block text-sm mb-1 font-medium" %>
          <%= f.text_field :first_name, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>
        <div>
          <%= f.label :last_name, "Last Name", class: "block text-sm mb-1 font-medium" %>
          <%= f.text_field :last_name, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm mb-1 font-medium" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>
        <div>
          <%= f.label :phone_number, "Phone Number", class: "block text-sm mb-1 font-medium" %>
          <%= f.telephone_field :phone_number, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>

        <!-- Password Fields -->
        <div>
          <%= f.label :password, "New Password", class: "block text-sm mb-1 font-medium" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm mb-1 font-medium" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-6 text-center">
        <%= f.submit "Update Profile", class: "w-full md:w-auto bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition" %>
      </div>

    <% end %>

  </div>
</div>